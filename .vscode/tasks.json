{
	"version": "2.0.0",
	"tasks": [
    {
      "type": "cppbuild",
      "label": "Build with GCC 11.3.0",
      "command": "/usr/bin/g++-11",
      "args": [
        "-std=c++20",
        "${workspaceFolder}/*.cpp",
        "-o",
        "${fileDirname}/rooster.exe",
        "-lSDL2",
      ],
      "options": {
        "cwd": "${fileDirname}"
      },
      "problemMatcher": [
        "$gcc"
      ],
      "group": "build",
      "detail": "compiler: /usr/bin/g++-11"
    },
    {
      "type": "cppbuild",
      "label": "Build with clang version 15.0.7",
      "command": "/usr/bin/clang++-15",
      "args": [
        "-g",
        "-std=c++20",
        "-lSDL2",
        "${workspaceFolder}/*.cpp",
        "-o",
        "${fileDirname}/rooster.exe"
      ],
      "options": {
        "cwd": "${fileDirname}"
      },
      "problemMatcher": [
        "$gcc"
      ],
      "group": "build",
      "detail": "compiler: /usr/bin/clang++-15"
    }
  ]
}